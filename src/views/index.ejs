<div class="container-fluid py-5">
    <!-- Start Subdomain Search -->
    <div class="row justify-content-center mb-5">
        <div class="col-12 col-lg-10 col-xl-6">
            <div class="card">
                <div class="card-body text-center p-4 p-sm-5">
                    <h1 class="card-title fw-bolder mb-3">SubdomainLy Cuyy</h1>
                    <p class="card-text mb-4">
                        Buat subdomain gratis dan unik dengan Subdomainly.
                    </p>
                    <div class="mb-3">
                        <div class="input-group input-group-lg">
                            <input
                                type="text"
                                class="form-control"
                                id="subdomain-input"
                                placeholder="Cari Subdomain"
                                aria-label="Cari Subdomain"
                                aria-describedby="btn-search"
                                onkeydown="handleEnterKey(event)"
                                oninput="handleSearchInput(event)"
                            />
                            <button
                                class="btn btn-outline-primary"
                                type="button"
                                disabled
                                id="btn-search"
                                onclick="searchSubdomain()"
                            >
                                <i class="fa fa-search"></i>        
                                Cari
                            </button>
                        </div>
                        <div class="text-danger mt-2" id="searchError">
                            <!-- Error message will be displayed here -->
                        </div>
                    </div>

                    <div
                        id="example-container"
                        data-theme="light"
                        data-appearance="execute"
                    ></div>

                    <div id="subdomainsContainer" class="mt-4" hidden>
                        <h3 class="card-title mb-3">Subdomain yang Tersedia</h3>
                        <div id="result-list" class="list-group">
                            <!-- Hasil pencarian akan dimasukkan di sini -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Subdomain Search -->

    <!-- Start Subdomain Created -->
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-6">
            <div class="card">
                <div class="card-body text-center p-4">
                    <h3 class="card-title fw-medium mb-4">Subdomain Terdaftar</h3>
                    <div class="row justify-content-center" id="registeredSubdomainContainer">
                        <!-- Daftar subdomain akan ditampilkan di sini -->
                    </div>
                    <!-- Pagination controls -->
                    <nav>
                        <ul class="pagination justify-content-center" id="paginationControls">
                            <!-- Kontrol pagination akan ditambahkan di sini -->
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- End Subdomain Created -->

</div>



<%- include('partials/modal-create') %>
<%- include('partials/modal-security-code') %>
<script>
    const serverUrl = "<%= process.env.SERVER_DOMAIN %>";
    const TURNSTILE_SITE_KEY = "<%= process.env.TURNSTILE_SITE_KEY %>";
</script>
<script src="static/js/search-subdomain.js"></script>
<script src="static/js/registered-subdomain.js"></script>
<script src="static/js/scripts.js"></script>

